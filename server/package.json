{
  "name": "ecommerce",
  "type": "module",
  "jest": {
    "transform": {},
    "testEnvironment": "node",
    "testMatch": [
      "**/__test__/**/*.test.js",
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "moduleFileExtensions": [ "mjs" , "js"],
    "testPathIgnorePatterns": ["/node_modules/"],
    "verbose" : true,
    "forceExit" : true,
    "clearMocks" : true
  },
  "version": "1.0.0",
  "description": "",
