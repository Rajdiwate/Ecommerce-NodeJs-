  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "start": "nodemon -r dotenv/config --experimental-json-modules server.js",
    "dev": "nodemon -r dotenv/config server.js"
  },
  "author": "Raj Diwate",
  "license": "ISC",
